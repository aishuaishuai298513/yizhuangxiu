-(void)loadMoneyData{

//    NSLog(@"钱包钱包 %@",dict);
    NSMutableDictionary *params = [NSMutableDictionary dictionary];
    [params setObject:_account.userid forKey:@"user_id"];
    [params setObject:_account.type forKey:@"type"];
    NSLog(@"%@",params);
    NSString *parmUrl;
    
    if ([_account.type isEqualToString:@"78"]) {
        parmUrl = GONGREN_POCKET_URL;
    }else {
        parmUrl = GUZHU_POCKET_URL;
    }
        [NetWork postNoParm:parmUrl params:params success:^(id responseObj) {
            NSLog(@"钱包成功:%@",responseObj);
            if ([[responseObj objectForKey:@"code"] isEqualToString:@"1000"]) {
               
                _hongbaoArr = [responseObj objectForKey:@"money"];
                //
                NSLog(@"红包 %@",_hongbaoArr);
                if ([_account.type isEqualToString:@"78"]) {
                    _moneyText = [[responseObj objectForKey:@"data"]objectForKey:@"money"];

                }else{
                    _moneyText = [[responseObj objectForKey:@"data"]objectForKey:@"em_money"];
 
                }
                NSLog(@"%@",_moneyText);
                //
//                NSIndexPath *indexPath = [NSIndexPath indexPathForRow:0 inSection:0];
//                NSArray *indexArr = @[indexPath];
//                [tb reloadRowsAtIndexPaths:indexArr withRowAnimation:UITableViewRowAnimationAutomatic];
                [tb reloadData];
                //
            }
        } failure:^(NSError *error) {
            NSLog(@"钱包错误:%@",error.localizedDescription);
        }];
    
}





@end
